{
  "name": "vync-video-player",
  "version": "0.2.11",
  "description": "Vync Video Player is a high-performance, cross-platform video player library designed specifically for React Native and Expo applications. Built with native iOS and Android implementations, it provides smooth video playback, intelligent memory management, and an intuitive API for developers.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "expo-module build",
    "clean": "expo-module clean",
    "lint": "expo-module lint",
    "test": "expo-module test",
    "prepare": "expo-module prepare",
    "prepublishOnly": "expo-module prepublishOnly",
    "expo-module": "expo-module",
    "open:ios": "xed example/ios",
    "open:android": "open -a \"Android Studio\" example/android"
  },
  "keywords": [
    "react-native",
    "expo",
    "video-player",
    "VideoPlayer"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZynclaveTech/vync-video-player.git"
  },
  "bugs": {
    "url": "https://github.com/ZynclaveTech/vync-video-player/issues"
  },
  "author": "ZynclaveTech",
  "license": "MIT",
  "homepage": "https://github.com/ZynclaveTech/vync-video-player#readme",
  "dependencies": {},
  "devDependencies": {
    "@types/react": "^19.0.14",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "expo-module-scripts": "^4.1.6",
    "expo-modules-core": "^2.3.12",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "react-native": "0.79.2"
  },
  "peerDependencies": {
    "expo": "*",
    "react": "*",
    "react-native": "*"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "plugin:react/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "react/no-unescaped-entities": 0,
      "react-native/no-inline-styles": 0,
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "none",
          "useTabs": false,
          "semi": false,
          "arrowParens": "avoid",
          "bracketSameLine": true,
          "bracketSpacing": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false,
    "semi": false,
    "arrowParens": "avoid",
    "bracketSameLine": true,
    "bracketSpacing": false
  }
}
